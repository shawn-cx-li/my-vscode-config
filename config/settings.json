{
  /*
   * ESlint
   */
  "javascript.referencesCodeLens.enabled": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  /*
   * TSlint
   */
  "typescript.referencesCodeLens.enabled": true,
  "typescript.preferences.importModuleSpecifier": "relative",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.watcherExclude": {
    "**/compiled/*/**": true,
    "**/components/common/Icon/*": true,
    "**/public/*/**": true
  },
  /*
   * Golang
   */
  "go.formatTool": "goreturns",
  // "go.goroot": "/opt/homebrew/opt/go/libexec",
  // "go.useLanguageServer": true,
  "[go]": {
    "editor.insertSpaces": false,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.tabSize": 2
  },

  /*
   * Solidity
   */
  "solidity.compileUsingRemoteVersion": "v0.8.12",
  "solidity.packageDefaultDependenciesDirectory": "./ethereum/node_modules",

  /*
   * Python
   */
  "python.defaultInterpreterPath": "/opt/homebrew/bin",

  /*
   * Common
   */
  "editor.tabSize": 2,
  "editor.codeLens": true,
  "git.enableCommitSigning": true,
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.shell.osx": "/bin/zsh",
  "workbench.iconTheme": "material-icon-theme",
  "window.restoreWindows": "all",
  "editor.fontSize": 16,
  "bracket-pair-colorizer-2.excludedLanguages": ["go"],
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "never"
  },
  "workbench.editor.showTabs": "multiple",
  "editor.renderWhitespace": "none",
  "editor.bracketPairColorization.enabled": true,
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "editor.accessibilitySupport": "off",
  "git.enableSmartCommit": true,
  "typescript.updateImportsOnFileMove.enabled": "never",
  "workbench.colorTheme": "One Dark Pro Monokai Darker",
  "go.toolsManagement.autoUpdate": true,
  "editor.minimap.renderCharacters": false,
  "security.workspace.trust.untrustedFiles": "open",
  "editor.inlineSuggest.enabled": true,
  "circleci.hostUrl": "",
  "window.zoomLevel": -1,
  "diffEditor.ignoreTrimWhitespace": false
}
